<h1>New Training</h1>
<%= form_for :training, url: trainings_path do |f| %>

    <% if @training.try(:errors).try(:any?) %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@training.errors.count, "error") %> prohibited
            this training from being saved:
          </h2>
          <ul>
            <% @training.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
